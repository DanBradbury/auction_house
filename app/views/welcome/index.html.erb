<div class="center">
  <div class="borderTest">
    <div class="inside">
    <div class="specHeader">Login</div>
      <%= form_with url: "/users", class: "specForm" do |form| %>
        <div class="specInput" data-controller="text-input">
          <%= image_tag "GUI/user-icon.png", class: "input-prompt" %>
          <%= text_field_tag :name, nil, autocomplete: "off", placeholder: "Enter username", class: "customField", data: { action: "focus->text-input#active blur->text-input#inactive" } %>
        </div>

        <%# image_tag("GUI/blue-button1.png") %>
        <div class="specButton">
          SUBMIT
        </div>
        <%= form.submit "Submit", class: "submitButton" %>
      <% end %>

      <div class="elem">New Game</div>
      <div class="elem">About</div>
    </div>
  </div>
</div>
